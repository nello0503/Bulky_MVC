@model Bulky.Models.ViewModels.ProductVM

<form method="post" class="row" >
    <input asp-for="Product.Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Product</h2>
            <hr/>
        </div>
        <div class="mb-3 row">
            <label asp-for="Product.Price" class="p-0"></label>
            <input asp-for="Product.Price" class="form-control"/>
            <span asp-validation-for="Product.Price"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Product.Name" class="p-0"></label>
            <input asp-for="Product.Name" class="form-control" />
            <span asp-validation-for="Product.Name"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Product.Hour" class="p-0"></label>
            <input asp-for="Product.Hour" class="form-control" />
            <span asp-validation-for="Product.Hour"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Product.Description" class="p-0"></label>
            <textarea asp-for="Product.Description" class="form-control"></textarea>
            <span asp-validation-for="Product.Description"></span>
        </div>
          
        <div class="mb-3 row">
            <label asp-for="Product.CategoryId" class="p-0"></label>
            <select asp-for="@Model.Product.CategoryId" asp-items="@Model.ShiftList" class="form-select ">
                <option disabled selected>--Select Category--</option>
            </select>
            <span asp-validation-for="Product.CategoryId"></span>
        </div>
      
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control" >Create</button>
            </div>
            <div class="col-6">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back to list
                </a>
            </div>
        </div> 
    </div>


</form>