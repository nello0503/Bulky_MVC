@model List<Product>


<div class="container">
    <div class="row pt-4 pb-23">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Product" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> Create new Product
            </a>
        </div>
    </div>


 <table class="table table-bordered table-striped" >
    <thead>
    <tr>
        <th>Title</th>
        <th>ISBN</th>
        <th>Price</th>
        <th>Author</th>
        <th>Category</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.Description
                </td>
                <td>
                    @obj.Description
                </td>
                <td>
                   
                </td>
                <td></td>
                <td>
                    <div class="btn-group w-75" role="group">
                            <a asp-action="Edit" asp-controller="Product" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                        </a>
                            <a asp-action="Delete" asp-controller="Product" asp-route-id="@obj.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i>Delete
                            </a>
                    </div>
                </td>
            </tr>
        }
      
    </tbody>
</table> 
</div>
